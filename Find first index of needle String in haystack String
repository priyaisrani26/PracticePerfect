public class Solution {
    public int strStr(String haystack, String needle) {
    	int len = haystack.length();
    	//check if needle is empty
    	if(needle.isEmpty()) {
    		return 0;
    	}
    	
    	//loop to check if haystack is having needle
    	for(int i=0; i<len; i++) {
    		if(haystack.contains(needle));
    		return haystack.indexOf(needle); //indexOf gives first occurrence of the needle
    	}
    	return -1;
        
    }
    
    public static void main(String[] args) {
		Solution s = new Solution();
		String haystack = "aaabababa";
		String needle = "ba";
		
		System.out.println(s.strStr(haystack, needle));
	}

}
